{
    "manifest_version": 3,
    "name": "AutoFiller",
    "version": "1.0",
    "description": "Automatically fills Google Forms using user profile data.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "https://docs.google.com/forms/*"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://docs.google.com/forms/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}